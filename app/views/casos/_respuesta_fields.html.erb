      label_inline: "Se brindó información",
      boolean_style: :nested
    %>
    <%= f.input :accionesder, label: "Acciones D.V." %>

    <%= f.association :ayudaestado, 
      collection: Ayudaestado.habilitados,
      label: "Ayuda del Estado",
      label_method: :nombre, 
      value_method: :id 
    %>
