      label: "Instituciones que ayudaron",
      wrapper_html: { style: "padding-bottom: 18px;" }
    %>
    <%= f.input :cantidadayes, label: "Detalle A. Estado" %>

    <%= f.association :progestado, 
      collection: Progestado.habilitados,
      label: "Programas y Respuesta del Estado",
      label_method: :nombre, 
      value_method: :id 
