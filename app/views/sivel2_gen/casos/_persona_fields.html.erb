<%= f.input :anionac, label: 'Año Nacimiento' %>
<%= f.input :mesnac, label: 'Mes Nacimiento' %>
<%= f.input :dianac, label: 'Día Nacimiento' %>
<%= f.input :sexo, collection: [["SIN INFORMACIÓN", :S], 
  ["FEMENINO", :F], ["MASCULINO", :M]], 
  include_blank: false 
%>
<%= f.association :nacional,
  collection: Sivel2Gen::Pais.habilitados,
  label: "País de Nacionalidad",
  label_method: :nombre,
  value_method: :id 
%>
<%= f.association :pais,
  collection: Sivel2Gen::Pais.habilitados,
  label: "País de Nacimiento",
  label_method: :nombre,
  value_method: :id 
%>
<%= f.association :departamento,
  collection: (Sivel2Gen::Departamento.habilitados.where(
    id_pais: f.object.id_pais)),
  label: "Estado/Departamento",
  label_method: :nombre,
  value_method: :id 
%>
<%= f.association :municipio,
  collection: (
    Sivel2Gen::Municipio.habilitados.where(
      id_pais: f.object.id_pais, 
      id_departamento: f.object.id_departamento)),
  label: "Municipio",
  label_method: :nombre,
  value_method: :id 
%>
<%= f.association :clase,
  collection: (Sivel2Gen::Clase.habilitados.where(id_pais: f.object.id_pais, 
                           id_departamento: f.object.id_departamento, 
                           id_municipio: f.object.id_municipio)),
  label: "Centro Poblado",
  label_method: :nombre,
  value_method: :id 
%>
