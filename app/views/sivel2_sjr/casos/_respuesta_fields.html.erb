<div class='control-group nested-fields'>
  <div class="controls">
    <%= f.input :id, as: :hidden %>
    <%= f.input :fechaatencion, 
      input_html: { "data-behaviour" => "datepicker"},
      as: :string, 
      label: "Fecha de Atención" 
    %>
    <div class="panel panel-default">
      <div class="panel-heading">Derechos Vulnerados</div>
      <div class="panel-body">
        <%= f.association :derecho, 
          collection: Sivel2Sjr::Derecho.habilitados,
          label: "Derechos Vulnerados",
          label_method: :nombre, 
          value_method: :id,
          input_html: {
            "data-toggle" => 'tooltip',
            "title" => 'Elija uno o varios derechos vulnerados que reporte la persona en la atención. Para elegir varios pulse Control y seleccione los derechos que sean necesarios'
          }
         %>
        <%= f.input :informacionder, 
          boolean_style: :nested,
          inline_label: "Se brindó información",
          input_html: {
            "data-toggle" => 'tooltip',
            "title" => 'Seleccione si el SJR brindó información frente a los derechos vulnerados)'
          }
        %>
        <%= f.input :accionesder, 
          label: "Acciones de la persona frente a Derechos Vulnerados",
          input_html: {
            "data-toggle" => 'tooltip',
            "title" => 'Describa las medidas ha tomado el solicitante para restituir sus derechos'
          }
       %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">Respuesta del Estado</div>
      <div class="panel-body">
        <%= f.association :ayudaestado, 
          collection: Sivel2Sjr::Ayudaestado.habilitados,
          label: "Ayuda del Estado",
          label_method: :nombre, 
          value_method: :id,
          input_html: {
            "data-toggle" => 'tooltip',
            "title" => 'Seleccione las ayudas otorgadas por instituciones públicas'
          }
        %>
        <%= f.input :cantidadayes, 
          label: "Cantidad Ayuda Estado",
          input_html: {
            "data-toggle" => 'tooltip',
            "title" => 'Cantidad de dinero otorgada por el Estado'
          }
        %>
        <%= f.input :institucionayes, 
          label: "Instituciones que ayudaron",
          wrapper_html: { style: "padding-bottom: 18px;" },
          input_html: {
            "data-toggle" => 'tooltip',
            "title" => 'Organizaciones o entidades que han brindado ayuda al solicitante'
          }
        %>
        <%= f.association :progestado, 
          collection: Sivel2Sjr::Progestado.habilitados,
          label: "Programas y Respuesta del Estado",
          label_method: :nombre, 
          value_method: :id,
          input_html: {
            "data-toggle" => 'tooltip',
            "title" => 'Marque el programa o respuesta que corresponda'
          }
        %>
        <%= f.input :difobsprog, 
          label: "Dificultades y Observaciones respecto a Respuesta del Estado",
          wrapper_html: { style: "padding-bottom: 18px;" },
          input_html: {
            "data-toggle" => 'tooltip',
            "title" => 'Comentarios adicionales frente a la respuesta del Estado'
          }
        %>
        <%= f.input :numprorrogas, 
          as: :integer, 
          label: "Número de Prorrogas" 
        %>
        <%= f.input :montoprorrogas, 
          as: :integer, 
          label: "Monto Prorrogas" 
        %>
        <%= f.input :fechaultima, 
          input_html: { 
            "data-behaviour" => "datepicker",
            value: f.object.fechaultima || '' 
          },
          as: :string, 
          label: "Fecha última prorroga" 
        %>
        <%= f.input :lugarultima, as: :text, 
          label: "Lugar última prorroga" 
        %>
        <%= f.input :turno, as: :text, 
          label: "Turno próxima prorroga" 
        %>
        <%= f.input :lugar, as: :text, 
          label: "Lugar solicitud Turno" 
        %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">Respuesta del SJR</div>
      <div class="panel-body">
        <%= f.association :ayudasjr, 
          collection: Sivel2Sjr::Ayudasjr.habilitados,
          label: "Asistencia Humanitaria",
          label_method: :nombre, 
          value_method: :id 
        %>
        <%= f.input :detallear, 
          label: "Detalle A. Humanitaria",
          wrapper_html: { style: "padding-bottom: 18px;" }
        %>
        <%= f.input :montoar, label: "Monto A. Humanitaria" %>

        <%= f.association :motivosjr, 
          collection: Sivel2Sjr::Motivosjr.habilitados,
          label: "Servicios y Asesorias del SJR",
          label_method: :nombre, 
          value_method: :id 
        %>
        <%= f.input :detallemotivo, label: "Detalle" %>

        <%= f.association :aslegal, 
          collection: Sivel2Sjr::Aslegal.habilitados,
          label: 'Seguimiento Judicial',
          label_method: :nombre, 
          value_method: :id 
        %>
        <%= f.input :detalleal, label: "Detalle S. Judicial" %>
        <%= f.input :montoal, label: "Monto S. Judicial" %>
      </div>
    </div>

    <%= f.input :id_personadesea, 
      collection: Sivel2Sjr::Personadesea.habilitados,
      label: "Persona desea",
      label_method: :nombre, 
      value_method: :id 
    %>

    <%= f.input :descamp, as: :text, 
      label: "Descripción o ampliación caso" 
    %>
    <%= f.input :compromisos, as: :text, 
      label: "Compromisos de la Persona" 
    %>
    <%= f.input :remision, as: :text, 
      label: "Remisión a otra Org." 
    %>
    <%= f.input :orientaciones, as: :text, 
      label: "Recomendaciones" 
    %>
    <%= f.input :gestionessjr, as: :text, 
      label: "Gestiones del SJR" 
    %>
    <%= f.input :observaciones, as: :text, 
      label: "Observaciones del caso" 
    %>
    <%= f.input :verifcsjr, as: :text, 
      label: "Verificación Compromisos SJR" 
    %>
    <%= f.input :verifcper, as: :text, 
      label: "Verificación Compromisos Persona" 
    %>
    <%= f.input :efectividad, as: :text, 
      label: "Efectividad en la Acción" 
    %>

    <%= link_to_remove_association "Eliminar Respuesta", f, 
      {class: 'btn-danger', :'data-existing' => 'true'} 
    %>
  </div>
</div>
