<%= s.input :fechasalidam, 
  input_html: { 
    "data-behaviour" => "datepicker",
    value: s.object.fechasalida || @caso.fecha,
    "data-toggle" => 'tooltip',
    "title" => 'Si esta refugio migración corresponde a la emblemática, esta fecha debe ser la misma registrada en datos básicos como "fecha de desplazamiento o migración emblemática"'
  },
  as: :string, label: "Fecha de Salida"
%>
<%= s.association :salidam,
  collection: Sip::Ubicacion.where(:id_caso => @caso.id),
  label: "Sitio de Salida",
  label_method: lambda { |t| formato_ubicacion(t) },
  value_method: :id,
  input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Elegir uno de los puntos registrados en la pestaña Ubicación'

  }
%>
<%= s.input :fechallegadam, 
  as: :string, 
  label: "Fecha de Llegada",
  input_html: {
    "data-behaviour" => "datepicker",
    "data-toggle" => 'tooltip',
    "title" => 'Registrar la fecha de llegada del refugio emblemático'
  }
%>
<%= s.association :llegadam,
  collection: Sip::Ubicacion.where(:id_caso => @caso.id),
  label: "Sitio de Llegada",
  label_method: lambda { |t| formato_ubicacion(t) },
  value_method: :id,
  input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Registrar sitio de llegada entre los lugares de la pestaña Ubicación'
  }
%>
<%= s.input :motivom, 
  label: "Motivo de migración/retorno",
  input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Motivo de migración/retorno'
  }
%>
