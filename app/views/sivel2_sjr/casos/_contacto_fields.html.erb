<%= f.simple_fields_for :persona do |p| %>
	<%= render 'sivel2_gen/casos/persona_fields', :f => p %>
<% end %>
<%= f.association :rangoedad,
	include_blank: false,
	label: "Rango de Edad",
	label_method: :rango, 
	value_method: :id 
%>
<%= f.association :filiacion,
	collection: Sivel2Gen::Filiacion.all.order(:nombre),
	include_blank: false,
	label: "Filiación",
	label_method: :nombre, 
	value_method: :id 
%>
<%= f.association :organizacion,
	collection: Sivel2Gen::Organizacion.all.order(:nombre),
	include_blank: false,
	label: "Organización",
	label_method: :nombre, 
	value_method: :id 
%>
<%= f.association :vinculoestado,
	collection: Sivel2Gen::Vinculoestado.all.order(:nombre),
	include_blank: false,
	label: "Vínculo con el Estado",
	label_method: :nombre, 
	value_method: :id
%>
<%= f.association :etnia,
	collection: Sivel2Gen::Etnia.all.order(:nombre),
	include_blank: false,
	label: "Etnia",
	label_method: :nombre, 
	value_method: :id 
%>
<%= f.input(:orientacionsexual, collection: [
						[:HETEROSEXUAL, :H], [:LESBIANA, :L], [:GAY, :G], 
						[:BISEXUAL, :B], [:TRANSEXUAL, :T] 
], 
	label: "Orientación Sexual",
	include_blank: false ) 
%>

<%= f.input :anotaciones %>

<%= f.association :profesion,
	collection: Sivel2Gen::Profesion.all.order(:nombre),
	include_blank: false,
	label: "Profesión",
	label_method: :nombre, 
	value_method: :id 
%>

<%= f.input :id, as: :hidden %>

<%= f.simple_fields_for :victimasjr do |s| %>
	<%= s.association :estadocivil,
		collection: Sivel2Gen::Estadocivil.all.order(:nombre),
		include_blank: false,
		label: "Estado Civil",
		label_method: :nombre, 
		value_method: :id 
	%>
	<%= s.association :rolfamilia,
		collection: Sivel2Sjr::Rolfamilia.all.order(:nombre),
		include_blank: false,
		label: "Rol en Familia",
		label_method: :nombre, 
		value_method: :id 
  %>

  <%= s.input :sindocumento, 
    boolean_style: :nested, 
    inline_label: "Sin Doc. Identidad" %>
  <%= s.input :cabezafamilia, 
    boolean_style: :nested, 
    inline_label: "Cabeza de Familia"
  %>
	<%= s.association :maternidad,
		collection: Sivel2Gen::Maternidad.all.order(:nombre),
		label: "Maternidad",
		label_method: :nombre, 
		value_method: :id 
  %>	
	<%= s.association :actividadoficio,
		collection: Sivel2Gen::Actividadoficio.all.order(:nombre),
		include_blank: false,
		label: "Actividad/Oficio actual",
		label_method: :nombre, 
    value_method: :id,
    wrapper_html: { style: "padding-bottom: 18px;" }
	%>
	<%= s.association :escolaridad,
		collection: Sivel2Gen::Escolaridad.all.order(:nombre),
		include_blank: false,
		label: "Nivel Escolar",
		label_method: :nombre, 
		value_method: :id
  %>
  <%= s.input :asisteescuela, 
    inline_label: "Asiste a Escuela",
    boolean_style: :nested
  %>
	<%= s.association :regimensalud,
		collection: Regimensalud.all.order(:nombre),
		include_blank: false,
		label: "Régimen de Salud",
		label_method: :nombre, 
		value_method: :id
  %>
  <%= s.input :eps, label: 'EPS o ARS' %>

  <%= s.input :tienesisben, 
    inline_label: "Tiene SISBEN",
    boolean_style: :nested
  %>

	<%= s.input :id_victima, as: :hidden %>
<% end %>
