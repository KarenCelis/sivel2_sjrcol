<%= f.simple_fields_for :persona do |p| %>
  <%= render 'sivel2_gen/casos/persona_fields', :f => p %>
<% end %>

<%= f.association :rangoedad,
	collection: Sivel2Gen::Rangoedad.habilitados,
	include_blank: false,
	label: "Rango de Edad",
	label_method: :rango, 
	value_method: :id 
%>
<%= f.association :filiacion,
	collection: Sivel2Gen::Filiacion.habilitados,
	include_blank: false,
	label: "Filiación Política",
	label_method: :nombre, 
	value_method: :id,
    input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Partido o filiación política en el momento del desplazamiento emblemático'}
 %>
<%= f.association :organizacion,
	collection: Sivel2Gen::Organizacion.habilitados,
	include_blank: false,
	label: "Organización",
	label_method: :nombre, 
	value_method: :id,
    input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Organización a la que pertenecía en el momento del desplazamiento emblemático'}
%>
<%= f.association :vinculoestado,
	collection: Sivel2Gen::Vinculoestado.habilitados,
	include_blank: false,
	label: "Vínculo con el Estado",
	label_method: :nombre, 
	value_method: :id,
    input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Registre si la persona era funcionaria pública en el momento del desplazamiento'}
%>
<%= f.association :etnia,
	collection: Sivel2Gen::Etnia.habilitados,
	include_blank: false,
	label: "Etnia",
	label_method: :nombre, 
	value_method: :id 
%>
<%= f.input(:orientacionsexual, collection: [
						[:HETEROSEXUAL, :H], [:LESBIANA, :L], [:GAY, :G], 
						[:BISEXUAL, :B], [:TRANSEXUAL, :T], [:INTERSEXUAL, :I]
], 
	label: "Orientación Sexual",
	include_blank: false ) 
%>

<%= f.input :anotaciones %>

<%= f.input :id, as: :hidden %>

<%= f.simple_fields_for :victimasjr do |s| %>
  <%= s.association :actividadoficio,
		collection: Sivel2Gen::Actividadoficio.habilitados,
		include_blank: false,
		label: "Actividad/Oficio",
		label_method: :nombre, 
    value_method: :id,
    wrapper_html: { style: "padding-bottom: 18px;" }
	%>

  <%= f.association :profesion,
    collection: Sivel2Gen::Profesion.habilitados,
    include_blank: false,
    label: "Profesión Universitaria",
    label_method: :nombre, 
    value_method: :id 
  %>

	<%= s.association :estadocivil,
		collection: Sivel2Gen::Estadocivil.habilitados,
		include_blank: false,
		label: "Estado Civil",
		label_method: :nombre, 
		value_method: :id 
	%>
	<%= s.association :rolfamilia,
		collection: Sivel2Sjr::Rolfamilia.habilitados,
		include_blank: false,
		label: "Rol en Familia",
		label_method: :nombre, 
		value_method: :id,
    input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Solicite a la persona identificar su rol en la familia, con ello podremos analizar el tipo de ayuda que requiere'}
   %>
  <%= s.input :cabezafamilia, 
    boolean_style: :nested, 
    inline_label: "Cabeza de Familia"
  %>
	<%= s.association :maternidad,
		collection: Sivel2Gen::Maternidad.habilitados,
		label: "Maternidad",
		label_method: :nombre, 
		value_method: :id 
  %>	
	<%= s.association :escolaridad,
		collection: Sivel2Gen::Escolaridad.habilitados,
		include_blank: false,
		label: "Nivel Escolar",
		label_method: :nombre, 
		value_method: :id
  %>
  <%= s.input :asisteescuela, 
    inline_label: "Asiste a Escuela",
    boolean_style: :nested
  %>
	<%= s.association :regimensalud,
		collection: Sivel2Sjr::Regimensalud.all.order(:nombre),
		include_blank: false,
		label: "Régimen de Salud",
		label_method: :nombre, 
		value_method: :id
  %>
  <%= s.input :eps, label: 'EPS o ARS' %>

  <%= s.input :tienesisben, 
    inline_label: "Tiene SISBEN",
    boolean_style: :nested
  %>

	<%= s.input :id_victima, as: :hidden %>
<% end %>
